<odoo>
    <!--  Form View  -->
    <record id="student_form_view" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name='custom_method' string='Click' type='object'/>
                </header>
                <sheet>
                    <notebook>
                        <page string="General Info">
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="age"/>
                                <field name="grade"/>
                            </group>
                        </page>
                        <page string="Contact Info">
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--  List View  -->
    <record id="student_list_view" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list
                    string="Students"
                    decoration-danger="age &lt; 18"
                    decoration-info="age &gt; 18"
            >
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="full_name" optional="hide"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="grade"/>
            </list>
        </field>
    </record>

    <!--  Calendar View  -->
    <record id="student_calendar_view" model="ir.ui.view">
        <field name="name">school.student.calendar</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <calendar string="Student record" create="0" mode="month" date_start="create_date" event_limit="5" quick_create="0">
                <field name="first_name" avatar_field="avatar_128" options="{'icon': 'fa fa-users'}"/>
            </calendar>
        </field>
    </record>

    <!--  Graph View  -->
    <record id="student_graph_view" model="ir.ui.view">
        <field name="name">school.student.graph</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <graph string="Student Record" sample="1" type="bar">
                <field name="first_name"/>
                <field name="age" type="measure"/>
            </graph>
        </field>
    </record>

    <!--  Action  -->
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form,calendar,graph</field>
    </record>

    <!--  Menu  -->
    <menuitem id="menu_school_root" name="School Management"/>

    <menuitem id="menu_school_student" name="Students" parent="menu_school_root"
              action="action_school_student"/>
</odoo>